<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yousef.youdri">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Youdri"
        tools:targetApi="31">
        <activity
            android:name=".activity.registration.password.ResetPasswordActivity"
            android:label="@string/resetPassword"
            android:exported="false" />
        <activity
            android:name=".activity.registration.password.PhoneResetActivity"
            android:exported="false"
            android:label="@string/verification" />
        <activity
            android:name=".activity.registration.password.ForgotPasswordActivity"
            android:exported="false"
            android:label="@string/resetPassword" />
        <activity
            android:name=".activity.registration.RegistrationActivity"
            android:exported="false"
            android:label="@string/signUp" />
        <activity
            android:name=".activity.registration.BlockActivity"
            android:exported="false"
            android:label="@string/block" />
        <activity
            android:name=".activity.registration.LoginActivity"
            android:exported="false"
            android:label="@string/login" />
        <activity
            android:name=".activity.registration.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>